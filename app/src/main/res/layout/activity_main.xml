<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Taust"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textColor="@color/tekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unit price" />
    <EditText
        android:background="@android:color/transparent"
        android:textColor="@color/must"
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a number" />
    <TextView
        android:textColor="@color/tekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of units" />
    <EditText
        android:background="@android:color/transparent"
        android:textColor="@color/must"
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a number"/>
    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton1"
        android:orientation="vertical">

        <RadioButton
            android:textColor="@color/must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:checked="true"
            android:text="Unit price excl. VAT" />

        <RadioButton
            android:textColor="@color/must"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:text="Unit price incl. VAT" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/Ok" />
    </LinearLayout>
    <TextView
        android:textColor="@color/must"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VAT"/>
    <EditText
        android:background="@android:color/transparent"
        android:textColor="@color/must"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="#tühi#"/>

    <TextView
        android:textColor="@color/must"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount excl. of VAT"/>

    <EditText
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="#tühi#"
        android:textColor="@color/must" />
    <TextView
        android:textColor="@color/must"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount incl. of VAT"/>

    <EditText

        android:background="@android:color/transparent"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="#tühi#"
        android:textColor="@color/must" />
</LinearLayout>